@model Producto
@{
    ViewData["Title"] = "Actualizar Producto";
}

<h3>@ViewData["Title"]</h3>
<hr />

<form asp-action="Editar">
    <div class="container">
        <input type="hidden" asp-for="Id"/>
        <div class="mb-2">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="Precio" class="form-label"></label>
            <input asp-for="Precio" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="Cantidad" class="form-label"></label>
            <input asp-for="Cantidad" class="form-control" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <label asp-for="Categorias" class="form-label"></label>
            <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" class="form-select">
                <options>--Seleccione Categoría--</options>
                @* <option value="NOSELECTEDVALUE">--Seleccione Categoría--</option> *@
            </select>
        </div>
        <div class="mb-2">
            <input type="submit" value="Editar" class="btn btn-success" />
        </div>
    </div>
</form>